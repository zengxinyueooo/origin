    <update id="update" parameterType="com.navigation.entity.Food">
        UPDATE food
        <set>
            <if test="regionId != null">region_id = #{regionId},</if>
            <if test="foodName != null">food_name = #{foodName},</if>
            <if test="foodDescription != null">food_description = #{foodDescription},</if>
            <if test="foodDetail != null">food_detail = #{foodDetail},</if>
            <if test="coverImage != null">cover_image = #{coverImage},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE food_id = #{foodId}
    </update>

    <delete id="batchDelete">
        DELETE FROM food
        WHERE food_id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>

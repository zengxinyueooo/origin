<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.navigation.mapper.HotelMapper">

   <!-- <insert id="save" parameterType="com.navigation.entity.region" useGeneratedKeys="true" keyProperty="id">
        insert into region (region_name, region_cover, location, region_description, max_capacity, open_start_time, open_end_time)
        values (#{regionName}, #{regionCover}, #{location}, #{regionDescription},
        #{maxCapacity}, #{openStartTime}, #{openEndTime})
    </insert>-->


    <update id="update" parameterType="com.navigation.entity.Hotel">
        UPDATE hotel
        <set>
            <if test="cover != null">cover = #{cover},</if>
            <if test="address != null">address = #{address},</if>
            <if test="phoneNumber != null">phone_number = #{phoneNumber},</if>
            <if test="hotelDescription != null">hotel_description = #{hotelDescription},</if>
            <if test="hotelName != null">hotel_name = #{hotelName},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="batchDelete">
        DELETE FROM hotel
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
